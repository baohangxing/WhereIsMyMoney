body
    font-family 'PingFang SC', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif

div
    box-sizing border-box

/* 颜色变量 */

/* 系统主题相关颜色 */
$system-color-blue = #07bbff
$system-color-red = #ef5c49
$system-color-yellow = #f0c252
$system-color-green = #03e154

/* 行为相关颜色 */
$color-primary = #007aff
$color-success = #4cd964
$color-warning = #f0ad4e
$color-error = #dd524d

/* 文字基本颜色 */
$text-color = #333 //基本色
$text-color-balck = #000000
$text-color-inverse = #fff //反色
$text-color-grey = #999 //辅助灰色，如加载更多的提示信息
$text-color-litte-grey = #707070
$text-color-more-grey = #666

/* 背景颜色 */
$bg-color = #ffffff
$bg-color-grey = #f6f6f6
$bg-color-white-grey = #f5f5f5
$bg-color-deep-grey = #a8a3a3
$bg-color-mask = rgba(#000000, 0.4)

/* 边框颜色 */
$border-color = #c8c7cc
$border-color-grey = #c7c7c7
$border-color-black = #181419

/* 尺寸变量 */

/* 文字尺寸 */
$font-size-ssm = 14px
$font-size-sm = 16px
$font-size-base = 18px
$font-size-lg = 20px
$font-size-llg = 22px
$font-size-lllg = 26px

/* Border Radius */
$border-radius-sm = 8px
$border-radius-circle = 50%

/* 水平间距 */
$spacing-row-sm = 8px
$spacing-row-base = 10px
$spacing-row-lg = 15px

/* 垂直间距 */
$spacing-col-sm = 4px
$spacing-col-base = 8px
$spacing-col-lg = 12px

/* 透明度 */
$opacity-disabled = 0.3 // 组件禁用态的透明度

/* 阴影 */

$box-shadow-box = 0 1px 3px rgba(26,26,26,.1)
$box-shadow-btn = 0 6px 6px 0 rgba(0, 0, 0, 0.16)
$box-shadow-up = 0 -2px 6px 0 rgba(0, 0, 0, 0.16)
